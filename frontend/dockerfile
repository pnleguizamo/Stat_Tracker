# Build stage
FROM node:20-alpine AS build

WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build    # creates /app/build

# Serve stage
FROM nginx:1.27-alpine

# Remove default config (optional but nicer)
RUN rm /etc/nginx/conf.d/default.conf

# Basic SPA config: serve index.html for everything
RUN printf 'server {\n\
    listen 80;\n\
    server_name _;\n\
    root /usr/share/nginx/html;\n\
    index index.html;\n\
\n\
    location / {\n\
        try_files $uri /index.html;\n\
    }\n\
}\n' > /etc/nginx/conf.d/spa.conf

COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80
