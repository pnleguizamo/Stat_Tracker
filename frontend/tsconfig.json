{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["DOM", "DOM.Iterable", "ES2020"],
		"allowJs": true,
		"checkJs": false,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"isolatedModules": true,
		"baseUrl": "src"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "build"]
}
